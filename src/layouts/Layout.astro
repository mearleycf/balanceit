---
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import { ToggleTheme } from '../components/svelte'
import '../styles/global.css'

export interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/favicon.svg"
    />
    <meta
      name="generator"
      content={Astro.generator}
    />
    <title>{title}</title>
  </head>
  <body
    class="text-black dark:text-white m-2 bg-warmgrey-100 dark:bg-deepblue-500"
  >
    <Header />
    <div class="absolute right-4 top-4">
      <ToggleTheme client:load />
    </div>
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
